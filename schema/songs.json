{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"required": [
		"index",
		"title",
		"length",
		"is_single",
		"album_id",
		
		"producer_ids",
		"genre_ids",
		"writer_ids"
	],
	"additionalProperties": false,

	"properties": {
		"index": {
			"type": "integer",
			"minimum": 1
		},
		"title": {
			"type": "string",
			"minLength": 1
		},
		"length": {
			"type": "integer",
			"minimum": 1
		},
		"is_single": {
			"type": "boolean"
		},
		"album_id": {
			"type": "string",
			"pattern": "[0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12}"
		},

		"producer_ids": {
			"type": "array",
			"minItems": 0,
			"items": {
				"type": "string",
				"pattern": "[0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12}"
			}
		},
		"genre_ids": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"pattern": "[0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12}"
			}
		},
		"writer_ids": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"pattern": "[0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12}"
			}
		}
	}
}
