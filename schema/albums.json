{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"required": [
		"title",
		"description",
		"length",
		"recorded_at",
		"released_at",
		"cover_image",
		
		"label_id",
		"genre_ids",
		"producer_ids",
		"studio_ids"
	],
	"additionalProperties": false,

	"properties": {
		"title": {
			"type": "string",
			"minLength": 1
		},
		"description": {
			"type": "string",
			"minLength": 1
		},
		"length": {
			"type": "integer",
			"minimum": 1
		},
		"recorded_at": {
			"type": "string",
			"pattern": "\\d{4}"
		},
		"released_at": {
			"type": "integer"
		},
		"cover_image": {
			"type": "string",
			"minLength": 1
		},
		"label_id": {
			"type": "string",
			"pattern": "[0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12}"
		},

		"genre_ids": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"pattern": "[0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12}"
			}
		},
		"producer_ids": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"pattern": "[0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12}"
			}
		},
		"studio_ids": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"pattern": "[0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12}"
			}
		}
	}
}
