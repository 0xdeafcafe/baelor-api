{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"title": {
			"type": "string"
		},
		"description": {
			"type": "string"
		},
		"length": {
			"type": "integer",
			"minimum": 1
		},
		"recordedAt": {
			"type": "string",
			"maxLength": 4,
			"minLength": 4
		},
		"releasedAt": {
			"type": "integer"
		},
		"studio": {
			"type": "string"
		},
		"coverImage": {
			"type": "string"
		},
		"labelId": {
			"type": "string",
			"pattern": "/^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$/i"
		},

		"genres": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"pattern": "/^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$/i"
					}
				},
				"required": [
					"id"
				],
				"additionalProperties": false
			}
		},
		"producers": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"pattern": "/^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$/i"
					}
				},
				"required": [
					"id"
				],
				"additionalProperties": false
			}
		}
	},
	"required": [
		"title",
		"description",
		"length",
		"recordedAt",
		"releasedAt",
		"studio",
		"coverImage",
		"labelId",
		"genres",
		"producers"
	],
	"additionalProperties": false
}
