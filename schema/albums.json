{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"required": [
		"title",
		"description",
		"length",
		"recordedAt",
		"releasedAt",
		"studio",
		"coverImage",
		"labelId",
		"genres",
		"producers"
	],
	"additionalProperties": false,
	"properties": {
		"title": {
			"type": "string",
			"minLength": 1
		},
		"description": {
			"type": "string",
			"minLength": 1
		},
		"length": {
			"type": "integer",
			"minimum": 1
		},
		"recordedAt": {
			"type": "string",
			"pattern": "\\d{4}"
		},
		"releasedAt": {
			"type": "integer"
		},
		"studio": {
			"type": "string",
			"minLength": 1
		},
		"coverImage": {
			"type": "string",
			"minLength": 1
		},
		"labelId": {
			"type": "string",
			"pattern": "[0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12}"
		},

		"genres": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"pattern": "[0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12}"
					}
				},
				"required": [
					"id"
				],
				"additionalProperties": false
			}
		},
		"producers": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"pattern": "[0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12}"
					}
				},
				"required": [
					"id"
				],
				"additionalProperties": false
			}
		}
	}
}
